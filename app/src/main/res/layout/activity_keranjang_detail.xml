<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 
    tools:context=".activities.keranjang.KeranjangDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_keranjang"/>


        <LinearLayout
            android:layout_marginBottom="110dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_recycler">

            <ExpandableListView
                android:id="@+id/expListhistori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:childDivider="@color/green_semi_transparent"
                android:clipToPadding="false"
                android:divider="@color/green_semi_transparent"
                android:groupIndicator="@null" />

        </LinearLayout>




    </LinearLayout>
 <include layout="@layout/item_total_keranjang"/>
</RelativeLayout>