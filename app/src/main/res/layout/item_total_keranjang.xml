<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/shadow">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.7dp"
                android:layout_marginTop="21dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <customfonts.TextViewSFProDisplayRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.03"
                    android:text="Total Order"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <customfonts.TextViewSFProDisplayMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.02"
                    android:text="Total sudah termasuk biaya pengiriman"
                    android:textColor="#99000000"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>

            <customfonts.MyTextView_Roboto_Medium
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginRight="21dp"
                android:letterSpacing="0"
                android:text="Rp.2.100.000"
                android:textColor="@color/black"
                android:textSize="18.3sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13.3dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <customfonts.MyTextView_Roboto_Medium
            android:id="@+id/txtmetode"
            android:layout_width="158dp"
            android:layout_height="40dp"
            android:background="@drawable/button_rect2"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:text="Metode Pembayaran"
            android:textColor="@color/black"
            android:textSize="13.3sp" />

        <customfonts.MyTextView_Roboto_Medium
            android:layout_width="158dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_rect"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:text="Checkout"
            android:textColor="@color/white"
            android:textSize="13.3sp" />
    </LinearLayout>
</LinearLayout>