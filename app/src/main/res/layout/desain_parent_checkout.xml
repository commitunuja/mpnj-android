<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0F000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp"
        android:weightSum="3">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.7"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <TextView
                    android:paddingTop="2dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/tv_title_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/shop_icon"
                    android:drawablePadding="10dp"
                    />

                <customfonts.MyTextView_Roboto_Medium
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/txtNamaToko"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="5dp"
                    android:text="Toko Sholeh"
                    android:textSize="14sp"
                    android:textStyle="bold" />

<!--                <customfonts.MyTextView_Roboto_Medium-->

<!--                    android:gravity="center"-->
<!--                    android:id="@+id/txtIdKabPenjual"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="40dp"-->
<!--                    android:paddingTop="2dp"-->
<!--                    android:paddingBottom="5dp"-->
<!--                    android:text="Toko Sholeh"-->
<!--                    android:textSize="14sp"-->
<!--                    android:textStyle="bold" />-->

            </LinearLayout>


            <TextView
                android:id="@+id/txtIdToko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:text="1"
                android:textSize="13sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imgpanah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_keyboard_arrow_down_grey_24dp" />


        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0F000000" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearopsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_opsi_pengiriman"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="vertical"
        android:outlineAmbientShadowColor="@color/colorutama">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/ic_shipping"
                android:textColor="@color/green"
                android:textSize="11.3sp" />

            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textSize="14sp"
                android:text="Opsi Pengiriman"
                android:textColor="@color/green" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="10dp"
                android:src="@drawable/ic_keyboard_arrow_right"
                android:textColor="@color/green"
                android:textSize="11.3sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="#0F000000" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
