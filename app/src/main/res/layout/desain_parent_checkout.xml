<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_pesanan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/line_gray" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorPrimaryTransparant" />

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/cart_relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.7"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tv_title_parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"

                            android:layout_marginBottom="10dp"
                            android:drawableLeft="@mipmap/shop_icon"
                            android:drawablePadding="10dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="5dp" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:id="@+id/idtransaksi"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            android:paddingBottom="5dp"
                            android:text="Toko Sholeh"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/txtNamaToko"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingTop="2dp"
                            android:paddingBottom="5dp"
                            android:text="Toko Sholeh"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <customfonts.TextViewSFProDisplaySemibold
                            android:visibility="gone"
                            android:id="@+id/tv_status_order"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="10dp"
                            android:text="Belum Bayar"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:background="#0F000000"
                        android:id="@+id/linearopsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="3dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:outlineAmbientShadowColor="@color/colorutama">

                        <androidx.cardview.widget.CardView
                            android:background="#0F000000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:src="@drawable/ic_shipping"
                                android:textColor="@color/green"
                                android:textSize="11.3sp" />

                            <customfonts.MyTextView_Roboto_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="10dp"
                                android:textSize="14sp"
                                android:text="Opsi Pengiriman"
                                android:textColor="@color/green" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_margin="10dp"
                                android:src="@drawable/ic_keyboard_arrow_right"
                                android:textColor="@color/green"
                                android:textSize="11.3sp" />





                        </androidx.cardview.widget.CardView>


                    </androidx.constraintlayout.widget.ConstraintLayout>



                    <customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/v_ongkoskirim"
                        android:textColor="@color/black"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ongkos Kirim"
                        android:textSize="11sp" />


                    <LinearLayout
                        android:id="@+id/ln_Kurir"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:orientation="horizontal">



                        <customfonts.MyTextView_Roboto_Regular
                            android:textColor="@color/black"
                            android:id="@+id/tvxkurirnya"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="JNE"
                            android:layout_marginBottom="5dp"
                            android:textSize="11sp" />
                        <customfonts.MyTextView_Roboto_Regular
                            android:textColor="@color/black"
                            android:id="@+id/tvxservice"
                            android:layout_marginLeft="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OKE"
                            android:layout_marginBottom="5dp"
                            android:textSize="11sp" />

                        <customfonts.MyTextView_Roboto_Regular
                            android:textColor="@color/black"
                            android:id="@+id/tvongkos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Rp 10.000"
                            android:textSize="11sp" />

                        <customfonts.MyTextView_Roboto_Regular
                            android:textColor="@color/black"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/tvxetd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dikirim dalam 3-4 Hari"
                            android:textSize="11sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">



                        <customfonts.MyTextView_Roboto_Regular
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="13sp"
                            android:text="Enter pincode for exact delivery dates/charges"
                            android:textColor="@color/cut_price"
                            android:textSize="11sp" />

                    </LinearLayout>



                    <TextView
