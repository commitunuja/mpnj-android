<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#17F1F1F1"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/linear_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:layout_gravity="center"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:button="@android:color/transparent"
            android:checked="false"
            android:background="@drawable/radiobuttonstyle"
            android:id="@+id/buttonBank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp" />

        <customfonts.Regular_Textview
            android:layout_gravity="center"
            android:id="@+id/paymentType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:letterSpacing="0.03"
            android:text="Credit / Debit Card"
            android:textColor="@color/blackTextColor"
            android:textSize="12sp" />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/logoImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/ic_info_foreground" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/viewline"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginLeft="65dp"
        android:background="@color/viewLineColor"
        android:orientation="vertical" />


    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="10dp">

            <LinearLayout
                android:id="@+id/lnName"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@mipmap/money_green"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:id="@+id/tvx_namaCustomer"
                    android:text="Bank BNI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />




            </LinearLayout>

            <TextView
                android:layout_marginLeft="24dp"
                android:layout_marginTop="5dp"
                android:id="@+id/tvx_nohp"
                android:layout_below="@+id/lnName"
                android:text="11221293192129"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="24dp"
                android:id="@+id/tvx_alamat"
                android:layout_below="@+id/tvx_nohp"
                android:text="Muhammad Solehudin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tvx_kec"
                android:layout_below="@+id/tvx_alamat"
                android:text="Kec. Paiton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />




            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageselect"
                android:src="@mipmap/ic_select_done"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/paddinng_large_15"
                />




        </RelativeLayout>

    </LinearLayout>




</LinearLayout>