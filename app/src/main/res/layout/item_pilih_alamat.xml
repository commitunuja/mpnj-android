<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_recycler"
        android:elevation="3dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="12dp"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:src="@drawable/map_marker"/>

            <customfonts.MyTextView_Roboto_Regular
                android:visibility="gone"
                android:id="@+id/tvx_idKecPembeli"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="17dp"
                android:layout_weight="1"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="1dp"
                android:textColor="@color/black"
                android:textSize="13sp" />


            <customfonts.MyTextView_Roboto_Regular
                android:id="@+id/tvx_setAlamat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="17dp"
                android:layout_weight="1"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="1dp"
                android:text="Mohon Pilih Alamat Pengiriman"
                android:textColor="@color/black"
                android:textSize="10sp" />


            <View
                android:layout_width="0.7dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#4a707070" />

            <customfonts.MyTextView_Roboto_Regular
                android:id="@+id/tvxubahAlamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:letterSpacing="0.03"
                android:text="Edit"
                android:textColor="@color/black"
                android:textSize="10sp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>