<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_header"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:id="@+id/greeting_img"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/shape"
            android:gravity="center"
            android:orientation="vertical" />

    </FrameLayout>


    <customfonts.MyTextView_Roboto_Bold
        android:id="@+id/greeting_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Opsi Pengiriman"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:src="@drawable/ic_clear" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/greeting_text"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/lnmain1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.3dp"
            android:layout_marginRight="8.9dp"
            android:background="@drawable/rect_recycler"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:elevation="3dp"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="50dp"
                                    android:layout_height="40dp"
                                    android:layout_marginRight="15.7dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/ic_delivery_route" />

                                <customfonts.MyTextView_Roboto_Regular
                                    android:id="@+id/tvx_idKecPembeli"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="18dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="17dp"
                                    android:layout_weight="1"
                                    android:letterSpacing="0.03"
                                    android:lineSpacingExtra="1dp"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    android:visibility="gone" />


                                <customfonts.MyTextView_Roboto_Regular

                                    android:id="@+id/tvx_setAlamat"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:letterSpacing="0.03"
                                    android:lineSpacingExtra="1dp"
                                    android:text="Muhammad Solehudin, Jl Rest Area Tongas, Dusun CUrah Pondok, Kecamatan Tongas, Kabupaten Probolinggo jawa timut, 088996412224. 68845"
                                    android:textColor="@color/black"
                                    android:textSize="13sp" />


                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/lnmain1"
            android:id="@+id/llMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvxidkecpembeli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="idkecPembeli"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="vertical"
                    android:padding="12dp">


                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:text="Pilih Opsi Pengiriman"
                            android:textSize="16sp"
                            android:textStyle="bold" />



                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_clear" />


                    </RelativeLayout>


                    <customfonts.MyTextView_Roboto_Bold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pilih Expedisi"
                        android:textColor="#000"
                        android:textSize="16dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/round_spinner"
                        android:orientation="vertical">


                        <Spinner
                            android:id="@+id/spin_pilihKurir"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"></Spinner>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:orientation="vertical">

                            <RadioGroup
                                android:id="@+id/radiogroupKurin"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <RadioButton
                                    android:id="@+id/jawab1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:visibility="gone" />

                            </RadioGroup>

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">


                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/kurir"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressBar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center" />

            </LinearLayout>


            <FrameLayout
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/font_16"
                android:layout_marginRight="@dimen/font_16"
                android:layout_marginStart="@dimen/font_16"
                android:layout_marginEnd="@dimen/font_16">

                <customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/tvSave"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_sign_up_border"
                    android:gravity="center"
                    android:paddingBottom="@dimen/value_5"
                    android:paddingLeft="@dimen/font_16"
                    android:paddingRight="@dimen/font_12"
                    android:text="Konfirmasi"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingEnd="@dimen/font_12"
                    android:paddingStart="@dimen/font_16" />

                <ImageView
                    android:id="@+id/ivGo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:paddingRight="@dimen/value_10"
                    app:srcCompat="@drawable/ic_icon_arrow_right"
                    android:paddingEnd="@dimen/value_10" />

            </FrameLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/llButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/value_5"
                android:layout_marginLeft="@dimen/value_5"
                android:layout_marginTop="@dimen/value_5"
                android:layout_marginEnd="@dimen/value_5"
                android:layout_marginRight="@dimen/value_5"
                android:layout_marginBottom="15dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:padding="@dimen/value_5">


                <TextView

                    style="@style/txt_white_medium"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Konfirmasi"
                    android:textSize="16sp" />


            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>