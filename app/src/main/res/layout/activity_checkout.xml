<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.keranjang.KeranjangDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_keranjang"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f6f6f6"
            android:orientation="vertical">


            <include layout="@layout/item_pilih_alamat"/>

            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_marginBottom="180dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/pbCheckout"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content" />

                <ExpandableListView
                    android:id="@+id/expand_checkout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:childDivider="@color/green_semi_transparent"
                    android:clipToPadding="false"
                    android:divider="@color/green_semi_transparent"
                    android:groupIndicator="@null" />


            </LinearLayout>

            <!--        <include layout="@layout/item_pembayaran"/>-->



            <!--        <include layout="@layout/item_subtotal"/>-->




        </LinearLayout>




    </LinearLayout>
    <include layout="@layout/item_total_checkout"/>
</RelativeLayout>