<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">




        <customfonts.TextViewSFProDisplaySemibold

            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:textColor="#4d4d4d"
            android:text="Terimakasih"
            android:textSize="20dp"
            android:gravity="center" />


        <customfonts.TextViewSFProDisplayRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:text="Transaksi Anda Sedang Kami Proses"
            android:textSize="14dp"
            android:gravity="center" />

        <ImageView android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="42dp"
            android:layout_marginBottom="62dp"
            android:src="@drawable/correct1"/>

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp">

                <customfonts.TextViewSFProDisplayRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/medium_text"
                    android:text="Kode Transaksi      "
                    android:textSize="12dp"
                    android:gravity="center" />


                <customfonts.TextViewSFProDisplayRegular
                    android:id="@+id/tvx_kodetransaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:text="AD105"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_marginLeft="16dp"
                    />


            </LinearLayout>


            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp"
                >

                <customfonts.TextViewSFProDisplayRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/medium_text"
                    android:text="Nama Pengirim      "
                    android:textSize="12dp" />


                <customfonts.TextViewSFProDisplayRegular
                    android:id="@+id/tvx_namapengirim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:text="Muhammad Solehudin"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_marginLeft="16dp"
                    />


            </LinearLayout>



            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp">

                <customfonts.TextViewSFProDisplayRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/medium_text"
                    android:text="Waktu Transaksi    "
                    android:textSize="12dp"
                    android:gravity="center" />


                <customfonts.TextViewSFProDisplayRegular
                    android:id="@+id/tvx_waktutransaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:text="22-06-2020 10:29:01"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_marginLeft="16dp"
                    />


            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp"
                >

                <customfonts.TextViewSFProDisplayRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/medium_text"
                    android:text="Total Pembayaran  "
                    android:textSize="12dp"
                    android:gravity="center" />


                <customfonts.TextViewSFProDisplayRegular
                    android:id="@+id/tvxtotalbayar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorPrimary"
                    android:text="Rp. 50.000.000"
                    android:textSize="14dp"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_marginLeft="16dp"                />
                />


            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp"
                >

                <customfonts.TextViewSFProDisplayRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/medium_text"
                    android:text="Status Pembayaran"
                    android:textSize="12dp"
                    android:gravity="center" />


                <customfonts.TextViewSFProDisplayRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/blackTextColor"
                    android:text="Pending"
                    android:textSize="14dp"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_marginLeft="16dp"                />
                />


            </LinearLayout>

        </LinearLayout>










    </LinearLayout>



    <customfonts.TextViewSFProDisplayRegular

        android:id="@+id/btnselesai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:text="SELESAI"
        android:textSize="15dp"
        android:gravity="center" />


</RelativeLayout>
