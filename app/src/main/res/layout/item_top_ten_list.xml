<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="3dp"
        android:layout_marginTop="5dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="260dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageproduk"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:src="@drawable/ac"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <customfonts.MyTextView_Roboto_Medium
                    android:id="@+id/titleproduk"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:maxLines="2"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="13.3sp"
                    android:layout_marginRight="5dp"
                    android:text="Vigo Atom Personal Air Condi...."/>


            </LinearLayout>

            <customfonts.MyTextView_Roboto_Medium
                android:id="@+id/typeproduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kitchenid"
                android:textSize="12sp"
                android:textColor="#8b8a8a"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#717171"
                    android:textSize="12sp"
                    android:text="4.6"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/star"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"/>

                <customfonts.MyTextView_Roboto_Medium
                    android:id="@+id/txthargaawal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$288"
                    android:textSize="13.3sp"
                    android:textColor="@color/red"
                    android:layout_gravity="right"
                    android:gravity="right"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>