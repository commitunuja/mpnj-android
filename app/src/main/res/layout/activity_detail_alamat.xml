                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20sp"
                            android:layout_weight="1"
                            android:text="Kode Pos"
                            android:textSize="12sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="20sp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_edittext"
                            android:gravity="right"
                            android:inputType="textAutoCorrect"
                            android:text="67291"
                            android:textSize="12sp" />


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/vieb_black_transparant" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_5"
                    android:layout_marginLeft="@dimen/value_5"
                    android:layout_marginEnd="@dimen/value_5"
                    android:layout_marginRight="@dimen/value_5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20sp"
                            android:layout_weight="1"
                            android:text="Alamat Lengkap"
                            android:textSize="12sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="20sp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_edittext"
                            android:gravity="left"
                            android:inputType="textAutoCorrect"
                            android:text="Jl. Kyai Haji Zaini Mun'im, Karanganyar, Paiton, Probolinggo, Jawatimur, Indonesia"
                            android:textSize="12sp" />

                    </LinearLayout>


                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/line_gray" />





            </LinearLayout>




            <LinearLayout
                android:id="@+id/llButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/value_5"
                android:layout_marginLeft="@dimen/value_5"
                android:layout_marginTop="@dimen/value_5"
                android:layout_marginEnd="@dimen/value_5"
                android:layout_marginRight="@dimen/value_5"
                android:layout_marginBottom="15dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="@dimen/value_5">


                <TextView
                    android:textColor="#F44336"
                    android:id="@+id/tvHapus"
                    style="@style/txt_white_medium"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="Hapus" />


                <TextView
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />


                <TextView
                    android:id="@+id/tvSave"
                    style="@style/txt_white_medium"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="Simpan" />




            </LinearLayout>





        </LinearLayout>

        </androidx.core.widget.NestedScrollView>



    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
