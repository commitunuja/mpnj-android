                            android:gravity="right"
                            android:inputType="textAutoCorrect"
                            android:text="Jawa Timur"
                            android:textSize="12sp" />


                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/vieb_black_transparant" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_5"
                    android:layout_marginLeft="@dimen/value_5"
                    android:layout_marginEnd="@dimen/value_5"
                    android:layout_marginRight="@dimen/value_5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20sp"
                            android:layout_weight="1"
                            android:text="Kota/Kabupaten"
                            android:textSize="12sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="20sp"
                            android:layout_weight="1"
                            android:background="@drawable/custom_edittext"
                            android:gravity="right"
                            android:inputType="textAutoCorrect"
                            android:text="Probolinggo"
                            android:textSize="12sp" />


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/vieb_black_transparant" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/value_5"
                    android:layout_marginLeft="@dimen/value_5"
                    android:layout_marginEnd="@dimen/value_5"
                    android:layout_marginRight="@dimen/value_5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
