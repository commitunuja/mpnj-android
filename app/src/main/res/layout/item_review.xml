                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surprise Gift to my sister, she just jumped in air,loved it...."
                android:textColor="@color/cut_price"
                android:textSize="11.3sp" />


            <ImageView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:src="@drawable/laptop" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Oleh"
                android:textColor="@color/cut_price"
                android:textSize="10.3sp" />

            <customfonts.MyTextView_Roboto_Medium
                android:id="@+id/tvnamareview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="By Guest on 24 March 2017"
                android:textColor="@color/colorAccent"
                android:textSize="10.3sp" />

