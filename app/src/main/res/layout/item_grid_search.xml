<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="2.5dp"
    android:layout_marginTop="3dp"
    android:layout_marginEnd="2.5dp"
    android:layout_marginBottom="5dp"
    android:background="@color/Background"
    app:cardCornerRadius="1.5dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

            <ImageView
                android:id="@+id/imageproduk"
                android:src="@drawable/circular_grey_bordersolid"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="18dp"
                />

            <TextView
                android:id="@+id/titleproduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:maxLines="2"
                android:padding="5dp"
                android:text="@string/loading"
                android:textAlignment="center"
                android:textColor="@color/primarytext"
                android:textSize="13sp"
                tools:ignore="HardcodedText" />

            <customfonts.MyTextView_Roboto_Medium
                android:id="@+id/typeproduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/loading"
                android:textColor="#4CAF50"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:isIndicator="false"
                    android:max="5"
                    android:numStars="5"
                    android:rating="2.5"
                    android:stepSize="0.0"
                    android:theme="@style/RatingBar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="4.5%"
                    android:textColor="#95989a"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/txthargaawal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/_343"
                    android:textColor="@color/primarytext"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/cart_of_ecommerce" />
            </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
