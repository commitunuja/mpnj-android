<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="colorAccent">#FF4081</color>
    <color name="colorPrimary">#3F51B5</color>
    <color name="colorPrimaryDark">#303F9F</color>
    <color name="searchBarBackIconTintColor">@color/searchBarIconColor</color>
    <color name="searchBarBackIconTintColorDark">@color/searchBarIconColorDark</color>
    <color name="searchBarClearIconTintColor">@color/searchBarIconColor</color>
    <color name="searchBarClearIconTintColorDark">@color/searchBarIconColorDark</color>
    <color name="searchBarCursorColor">#8000a1ff</color>
    <color name="searchBarDividerColor">#1F000000</color>
    <color name="searchBarDividerColorDark">#1FFFFFFF</color>
    <color name="searchBarHintColor">#42000000</color>
    <color name="searchBarHintColorDark">#42FFFFFF</color>
    <color name="searchBarIconColor">#3a3a3a</color>
    <color name="searchBarIconColorDark">#00a1ff</color>
    <color name="searchBarMenuIconTintColor">@color/searchBarIconColor</color>
    <color name="searchBarMenuIconTintColorDark">@color/searchBarIconColorDark</color>
    <color name="searchBarNavIconTintColor">@color/searchBarIconColor</color>
    <color name="searchBarNavIconTintColorDark">@color/searchBarIconColorDark</color>
    <color name="searchBarPlaceholderColor">#8A000000</color>
    <color name="searchBarPlaceholderColorDark">#8AFFFFFF</color>
    <color name="searchBarPrimaryColor">#FFFFFF</color>
    <color name="searchBarPrimaryColorDark">#303030</color>
    <color name="searchBarSearchIconTintColor">@color/searchBarIconColor</color>
    <color name="searchBarSearchIconTintColorDark">@color/searchBarIconColorDark</color>
    <color name="searchBarTextColor">#DE000000</color>
    <color name="searchBarTextColorDark">#DEFFFFFF</color>
    <color name="searchBarTextHighlightColor">#8000a1ff</color>
    <color name="searchBarTextHighlightColorDark">#BF00a1ff</color>
    <color name="white">#FFFFFF</color>
    <dimen name="corner_radius_default">2dp</dimen>
    <dimen name="corner_radius_rounded">25dp</dimen>
    <integer name="btm_to">360</integer>
    <integer name="icon_animation_duration">250</integer>
    <integer name="mtb_from">0</integer>
    <integer name="mtb_to_btm_from">180</integer>
    <string name="action_search">Search</string>
    <string name="app_name">MaterialSearchBar</string>
    <string name="back_vector_path" translatable="false">M50 25,L80 50,M20 50,L80 50,M50 75,L80 50</string>
    <string name="menu_vector_path" translatable="false">M20 30,L80 30,M20 50,L80 50,M20 70,L80 70</string>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="MaterialSearchBarDark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="mt_searchBarColor">@color/searchBarPrimaryColorDark</item>
        <item name="mt_dividerColor">@color/searchBarDividerColorDark</item>
        <item name="mt_navIconTint">@color/searchBarNavIconTintColorDark</item>
        <item name="mt_searchIconTint">@color/searchBarSearchIconTintColorDark</item>
        <item name="mt_clearIconTint">@color/searchBarClearIconTintColorDark</item>
        <item name="mt_menuIconTint">@color/searchBarMenuIconTintColorDark</item>
        <item name="mt_backIconTint">@color/searchBarBackIconTintColorDark</item>
        <item name="mt_textCursorTint">@color/colorAccent</item>
        <item name="mt_textColor">@color/searchBarTextColorDark</item>
        <item name="mt_hintColor">@color/searchBarHintColorDark</item>
        <item name="mt_placeholderColor">@color/searchBarPlaceholderColorDark</item>
        <item name="mt_highlightedTextColor">@color/searchBarTextHighlightColorDark</item>
    </style>
    <style name="MaterialSearchBarLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="mt_searchBarColor">@color/searchBarPrimaryColor</item>
        <item name="mt_dividerColor">@color/searchBarDividerColor</item>
        <item name="mt_navIconTint">@color/searchBarNavIconTintColor</item>
        <item name="mt_searchIconTint">@color/searchBarSearchIconTintColor</item>
        <item name="mt_clearIconTint">@color/searchBarClearIconTintColor</item>
        <item name="mt_menuIconTint">@color/searchBarMenuIconTintColor</item>
        <item name="mt_backIconTint">@color/searchBarBackIconTintColor</item>
        <item name="mt_textCursorTint">@color/searchBarCursorColor</item>
        <item name="mt_textColor">@color/searchBarTextColor</item>
        <item name="mt_hintColor">@color/searchBarHintColor</item>
        <item name="mt_placeholderColor">@color/searchBarPlaceholderColor</item>
        <item name="mt_highlightedTextColor">@color/searchBarTextHighlightColor</item>
    </style>
    <declare-styleable name="MaterialSearchBar">
        //Base
        <attr format="boolean" name="mt_speechMode"/>
        <attr format="integer" name="mt_maxSuggestionsCount"/>
        <attr format="boolean" name="mt_navIconEnabled"/>
        <attr format="boolean" name="mt_roundedSearchBarEnabled"/> //(API 21+ , Will Revert To Default Shape On Lower
        <attr format="boolean" name="mt_menuDividerEnabled"/>
        <attr format="color" name="mt_dividerColor"/>
        <attr format="color" name="mt_searchBarColor"/>

        //Icons
        <attr format="reference" name="mt_menuIconDrawable"/>
        <attr format="reference" name="mt_searchIconDrawable"/>
        <attr format="reference" name="mt_speechIconDrawable"/>
        <attr format="reference" name="mt_backIconDrawable"/>
        <attr format="reference" name="mt_clearIconDrawable"/>
        <attr format="color" name="mt_navIconTint"/>
        <attr format="color" name="mt_menuIconTint"/>
        <attr format="color" name="mt_searchIconTint"/>
        <attr format="color" name="mt_backIconTint"/>
        <attr format="color" name="mt_clearIconTint"/>
        <attr format="boolean" name="mt_navIconUseTint"/>
        <attr format="boolean" name="mt_menuIconUseTint"/>
        <attr format="boolean" name="mt_searchIconUseTint"/>
        <attr format="boolean" name="mt_backIconUseTint"/>
        <attr format="boolean" name="mt_clearIconUseTint"/>
        <attr format="boolean" name="mt_borderlessRippleEnabled"/>

        //Text
        <attr format="string" name="mt_hint"/>
        <attr format="string" name="mt_placeholder"/>
        <attr format="color" name="mt_textColor"/>
        <attr format="color" name="mt_hintColor"/>
        <attr format="color" name="mt_placeholderColor"/>
        <attr format="color" name="mt_textCursorTint"/>
        <attr format="reference" name="mt_leftTextSelectorDrawable"/>
        <attr format="reference" name="mt_middleTextSelectorDrawable"/>
        <attr format="reference" name="mt_rightTextSelectorDrawable"/>
        <attr format="color" name="mt_leftTextSelectorTint"/>
        <attr format="color" name="mt_middleTextSelectorTint"/>
        <attr format="color" name="mt_rightTextSelectorTint"/>
        <attr format="boolean" name="mt_handlesTintEnabled"/>
        <attr format="color" name="mt_highlightedTextColor"/>
    </declare-styleable>
</resources>